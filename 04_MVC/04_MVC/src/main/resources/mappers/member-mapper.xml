<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memberMapper">

	<resultMap type="Member" id="memberMap">
		<id property="id" column="id" />
		<result property="pwd" column="password" />
		<result property="name" column="name" />
		<result property="addr" column="address" />
	</resultMap>

	<select id="findMember" resultMap="memberMap"
		parameterType="string">
		SELECT id, password, name, address
		FROM
		<where>
			<if test="keyword != null">
				id LIKE '%'||#{keyword}||'%'
				OR name LIKE
				'%'||#{keyword}||'%'
				OR address LIKE '%'||#{keyword}||'%'
			</if>
		</where>
	</select>

	<insert id="signUpMember" parameterType="Member">
		insert into
		member(id,password,name,address)values(#{id},#{pwd},#{name},#{addr})
	</insert>


	<select id="login" resultMap="memberMap"
		parameterType="Member">
		select id, password, name, address
		from member
		where id=#{id} AND password=#{pwd}
	</select>

	<select id="showAllMember" resultMap="memberMap"
		parameterType="member">
		select id, password, name, address
		from Member
	</select>
	
	<update id="updateMember" parameterType="Member">
		UPDATE member
		SET password=#{pwd}, name=#{name}, address=#{addr}
		WHERE id=#{id}
	</update>

</mapper>
